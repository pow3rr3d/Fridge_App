{% extends 'user.html.twig' %}

{% block title %}
    Dashboard
{% endblock %}

{% block body %}
    <div class="text-center mb-5">
        <h1>My Account</h1>
    </div>
    {% for message in app.flashes('success') %}
        <div class="div alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {{ form_start(form) }}
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                {{ form_row(form.username) }}
            </div>
            <div class="col">
                {{ form_row(form.email) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(form.name) }}
            </div>
            <div class="col">
                {{ form_row(form.surname) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(form.password) }}
            </div>
            <div class="col">

            </div>
        </div>
    </div>

    <div class="form-group text-right">
        <button class="btn btn-lg btn-success mt-2 ml-0" type="submit">Save</button></div>
    {{ form_end(form) }}

{% endblock %}