{% extends "layout.twig" %}

{% block head %}
	<title>
		User account
	</title>
{% endblock %}
{% block body %}
	<p class="h1 text-center">Compte utilisateur pour
		{{ user.fullName }}
	</p><br>
	<div class="d-flex justify-content-center">
		<div id="cercle" class="d-flex justify-content-center"><img id="cercle" src="/{{user.avatar}}"></div><br></div>
	<form enctype="multipart/form-data" action="/updateUser" method="post" name="account">
		<div class="form-group">
			<label for="exampleInputEmail1">Nom</label>
			<input type="text" class="form-control" name="name" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{user.name}}" required/>
		</div>
		<div class="form-group">
			<label for="exampleInputEmail1">Pr√©nom</label>
			<input type="text" class="form-control" name="surname" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{user.surname}}" required/>
		</div>
		<div class="form-group">
			<label for="exampleInputEmail1">Email</label>
			<input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{user.email}}" required/>
		</div>
		<div class="form-group">
			<label for="image">Image</label>
			<input name="image" class="form-control" type="file" aria-describedby="inputGroupFileAddon01"/>
		</div>
		<div class="form-group">
			<label>Mot de passe</label>
			<div class="input-group" id="show_hide_password">
				<input type="password" name="password" id="password" class="form-control" placeholder="Password" tabindex="100" data-toggle="password"/>
			</div>
		</div>
		<div class="form-group">
			<label>Confirmer mot de passe</label>
			<div class="input-group" id="show_hide_password">
				<input type="password" name="passwordConfirm" id="passwordConfirm" class="form-control" placeholder="Confirm password" tabindex="100" data-toggle="password"/>
			</div>
		</div>
		<br>
		<button type="submit" name="btn" value="Submit" id="submitBtn" class="btn btn-primary">Modifier</button>
	</form>

{% endblock %}
{% block footer %}{% endblock %}
