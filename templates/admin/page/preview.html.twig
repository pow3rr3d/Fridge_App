{% extends 'admin.html.twig' %}

{% block body %}
    <head>
        <title>
            Fridge_App : Preview -


        </title>
    </head>

    <div class="preview-page-body">
        <nav id="frontNav" class="navbar navbar-expand-lg navbar-light ml-auto">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon my-toggler"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <a class="navbar-brand" href="/">
                    <img src="/media/logo.png" alt="">
                </a>
                <ul class="nav navbar-nav">
                    {% for page in pages|filter(s => s.isActive) %}
                        <li class="nav-item">
                            <a class="nav-link"
                               href="{% if page.path == "" %}/{% else %}{{ page.path }}{% endif %}">{{ page.name }}</a>
                        </li>
                    {% endfor %}
                    <li class="nav-item">
                        <a class="nav-link" href="/contact">Contact</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav ml-auto mr-3">
                    <li class="nav-item dropdown mr-5">
                        <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                            Account
                        </a>
                        <div class="dropdown-menu">
                            <a id="secondLink" class="nav-link" href="/register"><i class="fas fa-user-plus"></i> Sign
                                Up</a>
                            <a id="secondLink" class="nav-link" href="/user/dashboard"><i
                                        class="fas fa-sign-in-alt"></i>
                                Login</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="hidden" id="return-to-top"><i class="fas fa-chevron-up"></i></div>

        <section>
            {% if currentPage.slider != null %}
                <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleCaptions" data-slide-to="1" class=""></li>
                        <li data-target="#carouselExampleCaptions" data-slide-to="2" class=""></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item">
                            <img class="d-block w-100"
                                 data-src="holder.js/800x400?auto=yes&amp;bg=777&amp;fg=555&amp;text=First slide"
                                 alt="First slide [800x400]"
                                 src="{{ vich_uploader_asset(currentPage.slider , 'imageFile1', 'App\\Entity\\Slider') }}"
                                 data-holder-rendered="true">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100"
                                 data-src="holder.js/800x400?auto=yes&amp;bg=666&amp;fg=444&amp;text=Second slide"
                                 alt="Second slide [800x400]"
                                 src="{{ vich_uploader_asset(currentPage.slider , 'imageFile2', 'App\\Entity\\Slider') }}"
                                 data-holder-rendered="true">
                        </div>
                        <div class="carousel-item active">
                            <img class="d-block w-100"
                                 data-src="holder.js/800x400?auto=yes&amp;bg=555&amp;fg=333&amp;text=Third slide"
                                 alt="Third slide [800x400]"
                                 src="{{ vich_uploader_asset(currentPage.slider , 'imageFile3', 'App\\Entity\\Slider') }}"
                                 data-holder-rendered="true">
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button"
                           data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button"
                           data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            {% else %}

            {% endif %}
        </section>
        {% for section in currentPage.sections|filter(s => s.isActive) %}
            <section style="background-color: {{ section.color }}">
                <div id="section" class="container">
                    {# <div class="row d-flex justify-content-around "> #}
                    {{ section.content|raw }}
                    {# </div> #}
                </div>
                <br>
            </section>
        {% endfor %}
    </div>
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('onScroll') }}
{% endblock %}


