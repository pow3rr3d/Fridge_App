{% extends 'admin.html.twig' %}

{% block title %}Page{% endblock %}

{% block body %}
   <div class="text-center">
     <h1>Page index</h1>
            <div class="text-right mb-4">
                <a href="{{ path('admin_page_index') }}" class="btn btn-primary">back to list</a>
            
   <div class="text-left mt-5">
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ page.name }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ page.path }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ page.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    

    <a href="{{ path('admin_page_edit', {'id': page.id}) }}" class="btn btn-secondary">edit</a>
    {{ include('admin/page/_delete_form.html.twig') }}
</div>
{% endblock %}
