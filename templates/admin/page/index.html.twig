{% extends 'admin.html.twig' %}

{% block title %}Page index{% endblock %}

{% block body %}
    <div class="mt-3">
        <div class="form-row">
            <div class="col-12">
                <input type="text" id="search" placeholder="Searching for...." class="form-control">
            </div>
        </div>
        {% for message in app.flashes('success') %}
            <div class="div alert alert-success mt-5">
                {{ message }}
            </div>
        {% endfor %}
        <div class="row mt-4">
            <div class="tableTitle">
                <b class="text-center"> Pages list </b>
            </div>
            <table class="table table-striped">
                <thead class="thead-dark">
                <tr>
                    <th id="product-th-action">
                        <a href="{{ path('admin_page_new') }}">
                            <button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="top"
                                    title="Add a new Page">
                                <i class="fas fa-plus-square"></i>
                            </button>
                        </a>
                    </th>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Path</th>
                    <th>IsActive</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for page in pages %}
                    <tr>
                        <td></td>
                        <td>{{ page.id }}</td>
                        <td>{{ page.name }}</td>
                        <td>{{ page.path }}</td>
                        <td>{{ page.isActive ? 'Yes' : 'No' }}</td>
                        <td id="product-td-action">
                            <a href="{{ path('admin_page_edit', {'id': page.id}) }}">
                                <button id="edit" type="button" class="btn" data-toggle="tooltip"
                                        data-placement="top"
                                        title="Edit the page">
                                    <i class="far fa-edit"></i>
                                </button>
                            </a>
                            <a href="{{ path('admin_page_show', {'id': page.id}) }}">
                                <button id="edit" type="button" class="btn" data-toggle="tooltip"
                                        data-placement="top"
                                        title="Show the page">
                                    <i class="far fa-eye"></i>
                                </button>
                            </a>
                            <a href="{{ path('admin_page_preview', {'id': page.id}) }}">
                                <button id="edit" type="button" class="btn" data-toggle="tooltip"
                                        data-placement="top"
                                        title="Preview the page">
                                    <i class="far fa-file"></i>
                                </button>
                            </a>
                        </td>

                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {{ encore_entry_script_tags('search') }}
{% endblock %}
