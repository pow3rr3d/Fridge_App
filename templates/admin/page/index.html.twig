{% extends 'admin.html.twig' %}

{% block title %}Page index{% endblock %}

{% block body %}
    <div class="text-center">
        <h1>Page index</h1>
        <div class="jumbotron mt-5">
            <div class="form-row">
                <div class="col">
                    <input type="text" id="search" placeholder="Searching for...." class="form-control">
                </div>
            </div>
        </div>
        <div class="text-right mb-4">
            <a href="{{ path('admin_page_new') }}" class="btn btn-primary">Create new</a>
        </div>
        <table class="table table-hover">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Path</th>
                <th>IsActive</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for page in pages %}
                <tr>
                    <td>{{ page.id }}</td>
                    <td>{{ page.name }}</td>
                    <td>{{ page.path }}</td>
                    <td>{{ page.isActive ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('admin_page_show', {'id': page.id}) }}" class="btn btn-secondary">show</a>
                        <a href="{{ path('admin_page_edit', {'id': page.id}) }}" class="btn btn-secondary">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {{ encore_entry_script_tags('search') }}
{% endblock %}
