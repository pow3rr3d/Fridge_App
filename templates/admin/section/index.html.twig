{% extends 'admin.html.twig' %}

{% block title %}Section index{% endblock %}

{% block body %}
    <div class="text-center">
    <h1>Section index</h1>
    <div class="jumbotron mt-5">
        <div class="form-row">
            <div class="col">
                <input type="text" id="search" placeholder="Searching for...." class="form-control">
            </div>
        </div>
    </div>
    <div class="text-right mb-4">
        <a href="{{ path('admin_section_new') }}" class="btn btn-primary">Create new</a>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Page</th>
            <th>Order</th>
            <th>IsActive</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for section in sections %}
            <tr>
                <td>{{ section.id }}</td>
                <td>{{ section.name }}</td>
                <td>{{ section.page.name }}</td>
                <td>{{ section.orderNb }}</td>
                <td>
                    {% if section.isActive == 1 %}
                        Yes
                    {% else %}
                        No
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('admin_section_show', {'id': section.id}) }}" class="btn btn-secondary">show</a>
                    <a href="{{ path('admin_section_edit', {'id': section.id}) }}" class="btn btn-secondary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ encore_entry_script_tags('search') }}
{% endblock %}