{% extends 'admin.html.twig' %}

{% block title %}Slider{% endblock %}

{% block body %}
    <div class="text-center">
        <h1>Slider</h1>
        <div class="text-right mb-4">
            <a href="{{ path('admin_slider_index') }}" class="btn btn-primary">back to list</a>

            <div class="text-left mt-5">


                <table class="table table-hover">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ slider.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ slider.name }}</td>
                    </tr>
                    <tr>
                        <th>Image1</th>
                        <td>
                            <img src="{{ vich_uploader_asset(slider , 'imageFile1', 'App\\Entity\\Slider') | imagine_filter('card') }}">
                        </td>
                    </tr>
                    <tr>
                        <th>Image2</th>
                        <td> {% if slider.image2 %}
                                <img src="{{ vich_uploader_asset(slider , 'imageFile2', 'App\\Entity\\Slider') | imagine_filter('card') }}">
                            {% else %}

                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Image3</th>
                        <td> {% if slider.image2 %}
                                <img src="{{ vich_uploader_asset(slider , 'imageFile3', 'App\\Entity\\Slider') | imagine_filter('card') }}">
                            {% else %}

                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>IsActive</th>
                        <td>{{ slider.isActive ? 'Yes' : 'No' }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('admin_slider_edit', {'id': slider.id}) }}" class="btn btn-secondary">edit</a>

                {{ include('admin/slider/_delete_form.html.twig') }}

            </div>
        </div>
    </div>
{% endblock %}
