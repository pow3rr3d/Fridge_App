{% extends 'admin.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="mt-3">
        {{ form_start(form) }}
        <div class="form-row">
            <div class="col-11">
                {{ form_row(form.name) }}
            </div>
            <div class="col-1">
                <button class="btn btn-submit">Search</button>
            </div>
        </div>
        {{ form_end(form) }}
        {% for message in app.flashes('success') %}
            <div class="div alert alert-success mt-5">
                {{ message }}
            </div>
        {% endfor %}
        <div class="row mt-4">
            <div class="tableTitle">
                <b class="text-center"> Categories list </b>
            </div>
            <table class="table table-striped">
                <thead class="thead-dark">
                <tr>
                    <th id="product-th-action">
                        <a href="{{ path('category_new') }}">
                            <button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="top"
                                    title="Add a new Category">
                                <i class="fas fa-plus-square"></i>
                            </button>
                        </a>
                    </th>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td></td>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td id="product-td-action">
                            <a href="{{ path('category_edit', {'id': category.id}) }}">
                                <button id="edit" type="button" class="btn" data-toggle="tooltip"
                                        data-placement="top"
                                        title="Edit the category">
                                    <i class="far fa-edit"></i>
                                </button>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>


        </div>
        <br>
    </div>
    <div class="row justify-content-end">
        <div class="pagination">
            {{ knp_pagination_render(categories) }}
        </div>
    </div>
    </div>

{% endblock %}
