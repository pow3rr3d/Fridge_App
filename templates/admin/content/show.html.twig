{% extends 'admin.html.twig' %}

{% block title %}Content{% endblock %}

{% block body %}
    <div class="text-center">
    <h1>Content</h1>
    </div>
    <div class="text-right mt-4">
        <a href="{{ path('content_index') }}" class="btn btn-primary">back to list</a>

        <a href="{{ path('content_edit', {'id': content.id}) }}" class="btn btn-secondary">edit</a>
    </div>
    <table class="table table-hover mt-5">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ content.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ content.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ content.content | raw }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ content.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ content.createdAt ? content.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('admin/content/_delete_form.html.twig') }}
{% endblock %}
