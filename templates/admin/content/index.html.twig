{% extends 'admin.html.twig' %}

{% block title %}Content index{% endblock %}

{% block body %}
    <div class="text-center">
        <h1>Content index</h1>
    </div>
    <div class="text-right">
        <a href="{{ path('content_new') }}" class="btn btn-primary">Create new</a>
    </div>
    <table class="table table-hover mt-5">
        <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Content</th>
            <th>IsActive</th>
            <th>CreatedAt</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for content in contents %}
            <tr>
                <td>{{ content.id }}</td>
                <td>{{ content.name }}</td>
                <td>{{ content.content | raw }}</td>
                <td>{{ content.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ content.createdAt ? content.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('content_show', {'id': content.id}) }}" class="btn btn-secondary"><i class="far fa-eye"></i></a>
                    <a href="{{ path('content_edit', {'id': content.id}) }}" class="btn btn-secondary"><i class="far fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
