{% extends 'admin.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="mt-3">
    {{ form_start(form) }}
    <div class="form-row">
        <div class="col-11">
            {{ form_row(form.name) }}
        </div>
        <div class="col-1">
            <button class="btn btn-submit">Search</button>
        </div>
    </div>
    {{ form_end(form) }}
    {% for message in app.flashes('success') %}
        <div class="div alert alert-success mt-5">
            {{ message }}
        </div>
    {% endfor %}
        <div class="row mt-4">
            <div class="tableTitle">
                <b class="text-center"> Users list </b>
            </div>
            <table class="table table-striped">
                        <thead class="thead-dark">
                        <tr>
                            <th id="product-th-action">
                                <a href="{{ path('user_new') }}">
                                    <button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="top"
                                            title="Add a new User">
                                        <i class="fas fa-plus-square"></i>
                                    </button>
                                </a>
                            </th>
                            <th>Id</th>
                            <th>Username</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td></td>
                                <td>{{ user.id }}</td>
                                <td>{{ user.Username }}</td>
                                <td>{{ user.getRolesData }}</td>
                                <td id="product-td-action">
                                    <a href="{{ path('user_edit', {'id': user.id}) }}">
                                        <button id="edit" type="button" class="btn" data-toggle="tooltip"
                                                data-placement="top"
                                                title="Edit the user">
                                            <i class="far fa-edit"></i>
                                        </button>
                                    </a>
                                    <a href="{{ path('user_show', {'id': user.id}) }}">
                                        <button id="edit" type="button" class="btn" data-toggle="tooltip"
                                                data-placement="top"
                                                title="Show the user">
                                            <i class="far fa-eye"></i>
                                        </button>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

        </div>

        {% endblock %}
