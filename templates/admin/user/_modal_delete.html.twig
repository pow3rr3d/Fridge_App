<div class="modal fade" id="confirm-submit{{ account.id }}" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                Confirm Delete
            </div>
            <div class="modal-body">
                <p class="text-left ">Are you sure you want to delete the following user?</p>

                <p class="text-left">Name: <b>{{ account.name }}</b></p>
                <p class="text-left">Surname: <b>{{ account.surname }}</b></p>
                <p class="text-left">email: <b>{{ account.email }}</b></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <form method="post" action="{{ path("user_delete", {id: account.id}) }}"
                      style="display: inline-block">
                    <input type="hidden" name="_method" value="delete">
                    <input type="hidden" name="_token" data-toggle="modal"
                           data-target="#confirm-submit{{ account.id }}"
                           value="{{ csrf_token('delete' ~ account.id) }}">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>