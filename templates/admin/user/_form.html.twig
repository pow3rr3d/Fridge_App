{{ form_start(form) }}
<div class="form-group text-right">
    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col">
            {{ form_row(form.Username) }}
        </div>
        <div class="col">
            {{ form_row(form.email) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.name) }}
        </div>
        <div class="col">
            {{ form_row(form.surname) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.password) }}
        </div>
    </div>
</div>
{{ form_end(form) }}
